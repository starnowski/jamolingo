<?xml version="1.0" encoding="utf-8"?>
<edmx:Edmx Version="4.0"
           xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx">
    <edmx:DataServices>

        <Schema Namespace="Demo.Model"
                xmlns="http://docs.oasis-open.org/odata/ns/edm">

            <!-- ================================================= -->
            <!-- Entity -->
            <!-- ================================================= -->
            <EntityType Name="RootEntity">
                <Key>
                    <PropertyRef Name="Id"/>
                </Key>

                <Property Name="Id"
                          Type="Edm.String"
                          Nullable="false"/>

                <Property Name="PropC"
                          Type="Demo.Model.ComplexTypeC"/>

                <Property Name="PropA"
                          Type="Demo.Model.ComplexTypeA"/>
            </EntityType>

            <!-- ================================================= -->
            <!-- ComplexType C -->
            <!-- ================================================= -->
            <ComplexType Name="ComplexTypeC">
                <Property Name="StringProperty"
                          Type="Edm.String"/>

                <Property Name="PropB"
                          Type="Demo.Model.ComplexTypeB"/>

                <Property Name="PropA"
                          Type="Demo.Model.ComplexTypeA"/>
            </ComplexType>

            <!-- ================================================= -->
            <!-- ComplexType B -->
            <!-- ================================================= -->
            <ComplexType Name="ComplexTypeB">
                <Property Name="StringProperty"
                          Type="Edm.String"/>

                <Property Name="PropA"
                          Type="Demo.Model.ComplexTypeA"/>

                <Property Name="PropC"
                          Type="Demo.Model.ComplexTypeC"/>
            </ComplexType>

            <!-- ================================================= -->
            <!-- ComplexType A -->
            <!-- ================================================= -->
            <ComplexType Name="ComplexTypeA">
                <Property Name="StringProperty"
                          Type="Edm.String"/>

                <Property Name="PropB"
                          Type="Demo.Model.ComplexTypeB"/>
            </ComplexType>

            <!-- ================================================= -->
            <!-- Container -->
            <!-- ================================================= -->
            <EntityContainer Name="Container">
                <EntitySet Name="RootEntities"
                           EntityType="Demo.Model.RootEntity"/>
            </EntityContainer>

        </Schema>

    </edmx:DataServices>
</edmx:Edmx>
